{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "outDir": "./dist/types"
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
